<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kuky.restframework.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/get_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET CATEGORIES"
            android:textSize="14sp" />

        <Button
            android:id="@+id/post_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_categories"
            android:text="POST CATEGORY"
            android:textSize="14sp" />

        <Button
            android:id="@+id/get_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_category"
            android:text="GET CATEGORY"
            android:textSize="14sp" />

        <Button
            android:id="@+id/update_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_category"
            android:text="UPDATE CATEGORY"
            android:textSize="14sp" />


        <Button
            android:id="@+id/delete_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_category"
            android:text="DELETE CATEGORY"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_category"
            android:text="Login"
            android:textSize="14sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:text="Reset"
            android:textSize="14sp" />

        <Button
            android:id="@+id/get_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reset"
            android:text="Get Img"
            android:textSize="14sp" />

        <Button
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_img"
            android:text="Avatar"
            android:textSize="14sp" />

        <Button
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatar"
            android:text="Get User"
            android:textSize="14sp" />

        <Button
            android:id="@+id/modified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_info"
            android:text="Modified"
            android:textSize="14sp" />

    </RelativeLayout>

</ScrollView>
